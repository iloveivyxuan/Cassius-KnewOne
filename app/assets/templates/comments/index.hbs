<div class="comments">
  <h4>
    <i class="icon-comments-alt"></i>
    {{title}}
  </h4>
  <ul></ul>
  <form id="create_comment" class="comment_form">
    <p class="login_tip">
      需要您
      <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#login-modal">登录</a>
      之后才可以进行回复
    </p>
    <div class="controls">
      <textarea class="form-control" name="comment_content" rows="5" maxlength="300" required></textarea>
      <p class="help-block">不超过300字</p>
    </div>
    <button type="submit" class="btn btn-default">
      <i class="icon-comment-alt"></i>
      发布
    </button>
  </form>
</div>

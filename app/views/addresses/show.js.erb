var html = '<%= escape_javascript(render partial: 'addresses/address_radio', locals: {address: @address}) %>';

var exist_item = $('#order_address_id_<%= @address.id %>');
if(exist_item.size() == 0) {
  var $addresses = $('.order_address .controls .addresses');
  $addresses.append(html);
  $addresses.find('.radio > input').last().click();
} else {
  exist_item.parent().replaceWith(html);
  $('#order_address_id_<%= @address.id %>').click();
}

$('.modal').modal('hide');
$('.make-order').removeAttr('disabled');

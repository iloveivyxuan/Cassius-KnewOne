= form_for(thing, url: create_by_extractor_things_path,
                  remote: true, html: {class: 'form-horizontal', id: 'create_thing_modal_form'}) do |f|
  = f.hidden_field :official_site
  .modal-dialog
    .modal-content
      .modal-header
        button.close type="button" data-dismiss="modal" aria-hidden="true" &times;
        h4.modal-title
          i.fa.fa-globe
          | 通过网页分享新产品
      .modal-body
        #new-thing-edit-modal-images-container
          - images.each_with_index do |photo, index|
            .image
              .item
                .image_select
                  .select_backdrop
                  .select_btn_container
                    a.unselect href="#" data-selector-id="image_#{index}_selector"
                      i.fa.fa-circle-o
                = image_tag photo, data: {'selector-id' => "image_#{index}_selector"}
              ul
                = content_tag :li, data: {target: "#new-thing-edit-modal-images .carousel"}, id: "image_#{index}_selector" do
                  .selected_icon.hidden
                    i.fa.fa-check
                  = image_tag photo, class: "img-rounded"
                  = hidden_field_tag 'images[]', photo, id: "image_#{index}_field", disabled: true

        #new-thing-edit-modal-images
          .carousel.slide
            .carousel-inner
            = link_to_with_icon "", "fa fa-chevron-left", "#new-thing-edit-modal-images .carousel", data: {slide: "prev"},
                      class: "carousel-control left"
            = link_to_with_icon "", "fa fa-chevron-right", "#new-thing-edit-modal-images .carousel", data: {slide: "next"},
                      class: "carousel-control right"
          .slideshow_body
            ol.slideshow_inner#new-thing-edit-modal-sortable

        .form-group
          label.col-sm-3.control-label for="thing_title" 产品名称
          .col-sm-9
            = f.text_field :title, class: 'form-control', required: true
        .form-group
          label.col-sm-3.control-label for="thing_subtitle" 一句话描述
          .col-sm-9
            = f.text_field :subtitle, class: 'form-control'
        .form-group#new_thing_description
          label.col-sm-12.control-label 产品简要描述信息
          .col-sm-12
            = f.hidden_field :content, value: '', require: true
            = render 'shared/editor'

        .progress.progress-striped.active style="display: none"
          .progress-bar

        #upload_image_error.alert.alert-danger.hidden
          | 请至少选择一张图片

        #other_error.alert.alert-danger.hidden
          | 提交失败，重试若失败请联系客服

        .modal-footer
          button.btn.btn-default.prev [
            type="button"
            data-dismiss="modal"
            data-toggle="modal" data-target="#new-thing-from-url-modal"
          ]
            i.fa.fa-chevron-left
            | 返回

          = button_tag class: 'btn btn-primary', type: :submit do
            i.fa.fa-plus
            | 创建

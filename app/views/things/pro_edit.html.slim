.thing_wrapper
  = simple_nested_form_for @thing, url: pro_update_thing_path(@thing), html: {multipart: true, class: "editor_thing_form form-horizontal"} do |f|
    fieldset
      legend 购买信息
      = hidden_field_tag :admin, true
      = f.input :tags
      = f.input :shop, as: :url
      = f.input :price do
        = f.input_field :price_unit, collection: Thing.const_get(:CURRENCY_LIST)
        = f.input_field :price, as: :decimal
      = f.input :priority, as: :integer
      = f.input :recommended, as: :boolean
      = f.input :lock_priority, as: :boolean
      = f.input :created_at, as: :datetime
      = f.input :stage, collection: Thing.const_get(:STAGES),
      include_blank: false, label_method: :last, value_method: :first
      = f.input :stage_end_at, as: :datetime
    .submit
      = f.button :submit, class: "btn-primary btn-large"

- content_for :script do
  javascript:
    $(document).ready(function() {
            $("#thing_tags").tagsInput();
        });

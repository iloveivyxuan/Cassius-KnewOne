<% present @thing do |tp| %>
  var $actions     = $('#thing_actions .actions'),
      $actionOwn   = $actions.find('.owners'),
      $actionWrite = $actions.find('.write_feeling');

  $actionOwn.html("<%=j render('own', tp: tp) %>");
  if ($html.hasClass('cssanimations') &&
      $actionOwn.children('a').hasClass('owned')) {
    $actionWrite.find('.fa')
      .on(Making.prefixEvent('AnimationEnd'), function(event) {
        $(this).removeClass('flip');
      }).addClass('flip');
  }
<% end %>

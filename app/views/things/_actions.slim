- cache_unless user_signed_in?, ['things', 'actions', @thing]
  ul.actions.clearfix
    li.fanciers= render "shared/fancy", p: tp, from: "thing"
    li.owners= render "things/own", tp: tp
    li.write_feeling= link_to_with_icon '说点什么', 'fa fa-comments-o', '#thing_feeling_form', title: '说点什么'
    li.add_to_list= render 'thing_lists/link_to_add_list', thing_id: tp.thing.id.to_s

  .others.clearfix
    - if tp.tags.present?
      ul.tags.clearfix
        = render partial: 'things/tag', collection: tp.tags

    .related.clearfix
      - if tp.thing.official_site.present?
        = tp.official_site
      - brand_text = tp.thing.try(:brand).try(:brand_text)
      - if brand_text.present?
        = link_to_with_icon brand_text, 'fa fa-folder-open', things_path(brand: brand_text)

- content_for :script do
  javascript:
    if(Modernizr.mq('(min-width: ' + Making.Breakpoints.screenMDMin + ')'))
      Making.CartItemNew();

    $('.write_feeling > a').on('click', function (event) {
      event.preventDefault();

      $('html, body').animate({
        scrollTop: $($.attr(this, 'href')).offset().top - 108
      }, 500);
    });

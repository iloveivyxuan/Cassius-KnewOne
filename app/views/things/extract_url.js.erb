<% if @result %>
$('#new-thing-edit-modal').html('<%= escape_javascript render('things/new_thing_modal', thing: @thing, images: @result[:images]) %>');
<% if @similar %>
$('#new-thing-similar-modal').html('<%= escape_javascript render('things/similar_thing_modal', thing: @similar) %>').modal('show');
<% else %>
$('#new-thing-edit-modal').modal('show');
<% end %>
Making.init_new_thing_modal();
<% else %>
$('#new-thing-from-url-modal').
        find('.alert').removeClass('hidden');
<% end %>

<% if @result %>
$('#new-thing-edit-modal').html('<%=j render('things/new_thing_modal', thing: @thing, images: @result[:images]) %>');
<% if @similar %>
$('#new-thing-similar-modal').html('<%=j render('things/similar_thing_modal', thing: @similar) %>');
<% end %>
Making.init_new_thing_modal();
<% else %>
$('#new-thing-from-url-modal')
  .find('.alert').removeClass('hidden').end()
  .find('input').val('').end()
  .find('input, button').attr('disabled', false)

  $('#new-thing-url').$progress('remove');
<% end %>

<%- provide :nav, :profiles %>

<header class="page-header">
  <h2><i class="icon-user"></i>个人信息<h2>
</header>

<%= simple_form_for(current_user, :url => profile_path, :html => { :method => :patch }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nickname, :required => true %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :avatar, :as => :file %>
    <%= f.input :avatar_cache, :as => :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "保存" %>
  </div>
<% end %>

<% if @message %>
  $('#dialog_content').val("");
  $('#new_private_message_modal').modal('hide');

  <% if @message.dialog.user_id != '543c956231302d1015600100' %>
    Making.ShowMessageOnTop('发送成功！');
  <% end %>

  if ($('html').is('.dialogs_index')) {
    window.location.reload();
  }

  if ($('html').is('.dialogs_show')) {
    $('.private_message:first-of-type').before("<%=j render('private_message', message: @message) %>");
  }
<% else %>
  Making.ShowMessageOnTop('发送失败，请检查接收者的昵称是否填写正确', 'danger');
<% end %>

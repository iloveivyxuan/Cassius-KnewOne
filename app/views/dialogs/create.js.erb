$('#dialog_content').val("");
$('#new_private_message_modal').modal('hide');

$('.message-on-top').replaceWith("<%=j render('shared/message_on_top') %>");
setTimeout(function () {
  $('.message-on-top .alert').alert('close')
}, 2000)

if ($('html').is('.dialogs_index')) {
  window.location.reload();
}

if ($('html').is('.dialogs_show')) {
  $('.private_message:first-of-type').before("<%=j render('private_message', message: @message) %>");
}

- provide :nav, :reviews
- page_title @review.title

- present @review do |rp|

  article.post_show.foo id="review_#{@review.id}"
    header
      h3= rp.title
      = rp.score
      = rp.author_tag

    section.post_content= rp.content

    footer
      = render 'shared/voting', object: rp.review
      = link_to_with_icon "分享", "fa fa-share",
        user_signed_in? ? "#review_share" : "#login-modal",
        title: "分享", data: {toggle: 'modal'}
      = render 'shared/post_actions', post: rp.review,
        edit_post_path: rp.edit_path, post_path: rp.path

    = render 'shared/share', id: 'review_share',
    content: rp.share_content, pic: rp.thing_photo_url(:huge)

    = render 'shared/comments', post: rp.review, id: "comments", auth: true

- content_for :script do
  javascript:
    Making.Comments("#comments");
    if ("#{flash[:provider_sync]}" == "true")
      $(function(){$('#review_share').modal('show')});

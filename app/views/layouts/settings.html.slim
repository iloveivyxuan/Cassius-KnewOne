- content_for :content do
  #settings_wrapper.offcanvas_mix

    aside#aside role="complementary"

      nav role="navigation"
        .list-group
          = nav_tab_link_with_icon :profile, '个人信息', 'fa fa-user', edit_profile_path, class: 'list-group-item'
          = nav_tab_link_with_icon :account, '账号信息', 'fa fa-book', edit_account_path, class: 'list-group-item'
          = nav_tab_link_with_icon :order, '我的订单', 'fa fa-file-text-alt', orders_path, class: 'list-group-item'
          = nav_tab_link_with_icon :address, '收货地址', 'fa fa-truck', addresses_path, class: 'list-group-item'
          = nav_tab_link_with_icon :coupon, '我的优惠券', 'fa fa-ticket', coupons_path, class: 'list-group-item'
            i.fa.fa-angle-right.pull-right
        .list-group
          - if can? :manage, Supplier
            =nav_tab_link_with_icon :supplier, '供货信息', 'fa fa-stethoscope', suppliers_path, class: 'list-group-item'
          - if can? :manage, :all
            =nav_tab_link_with_icon :supplier, '管理小组', 'fa fa-stethoscope', groups_path, class: 'list-group-item'
            =nav_tab_link_with_icon :supplier, '管理产品', 'fa fa-stethoscope', admin_things_path, class: 'list-group-item'
            =nav_tab_link_with_icon :supplier, '管理评测', 'fa fa-stethoscope', reviews_all_path, class: 'list-group-item'
            =nav_tab_link_with_icon :supplier, '管理用户', 'fa fa-stethoscope', users_path, class: 'list-group-item'
            =nav_tab_link_with_icon :supplier, '管理优惠券', 'fa fa-stethoscope', haven_abatement_coupons_path, class: 'list-group-item'
          - if can? :manage, Order
            =nav_tab_link_with_icon :supplier, '管理订单', 'fa fa-stethoscope', haven_orders_path, class: 'list-group-item'

    main#main role="main"
      = yield

    a#switch_aside
      i.fa.fa-chevron-sign-right
    a#switch_main
      i.fa.fa-chevron-sign-left

= render template: 'layouts/application'

- content_for :content do
  - provide :title, @group.name

  .group_wrapper

    header#group_header
      - unless content_for(:new_topic) == "no"
        .new_topic
          - if user_signed_in?
            = link_to_with_icon "发帖", "fa fa-pencil", new_group_topic_path(@group), class: 'btn btn-primary'
          - else
            = link_to_with_icon "发帖", "fa fa-pencil", '#', class: 'btn btn-default disabled', data: {toggle: "modal", target: "#login-modal"}
      h1= link_to_with_icon @group.name, "fa fa-group", @group
      p= @group.description

    section#group_content= yield

= render template: 'layouts/application'

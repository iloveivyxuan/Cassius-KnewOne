section.group_info
  .avatar= gp.avatar :small
  h1= gp.name
  blockquote= gp.description
  .membership
    = link_to_with_icon "加入小组", "fa fa-plus", "#", class: 'btn btn-primary', id: "join_group"
    = link_to "#", class: "members_count" do
      = gp.members_count
      small 成员

section.members.panel
  .panel-heading
    h3.panel-title
      i.fa.fa-user
      | 小组成员
    = link_to_with_icon '', 'fa fa-chevron-right fa_alone', "#", class: 'more', title: '更多'
  .panel-body
    ul.user_list
      - gp.members(1, 9).each do |user|
        li.author= link_to user_avatar(user, :small), user, title: user.name

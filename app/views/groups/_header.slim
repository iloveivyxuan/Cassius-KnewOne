section.group_info
  .name
    = gp.avatar :small
    h1= gp.name
  blockquote
    = gp.description
    .author= gp.founder
  .membership
    = link_to_with_icon "加入小组", "fa fa-plus", "#", class: 'btn btn-default btn-sm'

section.members.panel
  .panel-heading
    h3.panel-title
      i.fa.fa-group
      | 小组成员
    = link_to_with_icon '', 'fa fa-chevron-right fa_alone', "#", class: 'more', title: '更多'
  .panel-body
    ul.user_list
      - gp.members(1, 9).each do |user|
        li.author= link_to user_avatar(user, :small), user, title: user.name

- provide :title, '我的优惠券'
section.simple_page_wrapper.widget
  header.page-header
    h2
      i.icon-ticket
      | 我的优惠卷
  = form_tag bind_coupons_path, class: "form", role: "form"
    .form-group
      .col-xs-9.col-sm-4
        = text_field_tag :code, '', class: 'form-control', placeholder: '优惠券代码'
        - if flash[:error]
          strong.help-block = flash[:error]
        - elsif flash[:success]
          strong.help-block = flash[:success]
      = submit_tag '添加', class: 'btn btn-primary'
  section.coupons
    table.table
      - @coupons.each do |c|
        tr
          td = c.code
          td = c.name
          td = c.note
          td = c.available? ? '可用' : '已使用'

- page_title '优惠券'
- provide :nav, :coupon

- if flash[:notice]
  .notice = flash[:notice]

header.page-header
  h2
    i.fa.fa-ticket
    | 优惠券

= form_tag bind_coupons_path, role: "form"
  .form-group class="#{"has-#{flash[:status]}" if flash[:status]}"
    .col-xs-9.col-sm-4
      = hidden_field_tag :redirect_from, params[:redirect_from]
      = text_field_tag :code, (params[:code] || ''), class: 'form-control', placeholder: '优惠券代码'
      - if flash[:msg]
        strong.help-block = flash[:msg]
    = submit_tag '添加', class: 'btn btn-primary'


section.coupons
  table.table
    thead
      th 代码
      th 名称
      th 作用
      th 过期时间
    tbody
      - @coupons.each do |c|
        - unless c.expired? || c.used?
          tr
            td = c.code
            td = c.name
            td = c.note
            td = c.expires_at

- post = @entry.post
- author = post.author
- page_title entry_title(@entry)
- active_nav_tab(@entry)
- provide :sharing_content, @entry.sharing_content
- provide :sharing_cover, @entry.canopy.url || "http://image.knewone.com/photos/881180dea7302c0a0fd05717e5397eba.jpg"
- provide :wechat_cover_url, @entry.wechat_cover.url || @entry.canopy.url(:small)

- unless browser.desktop?
  .sharing_cover.hide
    img src=(@entry.wechat_cover.url(:square) || @entry.canopy.url(:square))

- if ['专访', '评测', '列表'].include? @entry.category
  = render 'entries/article', entry: @entry, post: post, author: author
- else
  = render 'entries/article_abandoned', entry: @entry, post: post, author: author

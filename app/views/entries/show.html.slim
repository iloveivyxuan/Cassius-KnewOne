- post = @entry.post
- author = post.author
- provide :sharing_content, @entry.sharing_content
- provide :sharing_cover, image_tag(@entry.cover.url)
- page_title entry_title(@entry)
- active_nav_tab(@entry)

- case post.class
- when Review
  = render 'entries/review', entry: @entry, post: post, author: author
- when Special
  = render 'entries/special', entry: @entry, post: post, author: author
- else
  = render 'entries/article', entry: @entry, post: post, author: author

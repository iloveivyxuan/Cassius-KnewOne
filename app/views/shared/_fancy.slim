- if browser.wechat? && !user_signed_in?
  = link_to user_omniauth_authorize_path(:wechat, state: request.fullpath, scope: 'snsapi_base'), data: {toggle: 'wechat_login'} do
    i.fa.fa-heart-o
    span.fanciers_count = number_to_human(thing.fanciers_count)
    small 喜欢
- else
  - if user_signed_in?
    - data = {fancy: thing.id.to_s, type: 'fancy'}
  - else
    - data = {toggle: "modal", target: "#login-modal", link: thing_url(thing), "signin-legend" => "登录后，收集喜欢的产品"}
  - data.merge!({ category: "thing", action: "fancy", label: thing.title })

  - title = thing.fancied?(current_user) ? '修改喜欢状态' : '喜欢此产品'
  - fancy_class = thing.fancied?(current_user) ? "fancied" : "unfancied"
  - fancy_class += " desired" if thing.desired?(current_user)
  - icon_class = thing.fancied?(current_user) ? "fa-heart" : "fa-heart-o"

  = link_to "#", class: fancy_class, title: title, data: data do
    i class="fa #{icon_class}"
    span.fanciers_count = number_to_human(thing.fanciers_count)
    small 喜欢

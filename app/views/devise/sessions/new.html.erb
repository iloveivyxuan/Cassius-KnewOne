<header class="page-header" role="banner">
  <h1>登录</h1>
</header>
<main role="main">
  <div id="oauth">
    <%= link_to_with_icon ' Twitter', 'icon-twitter', user_omniauth_authorize_path(:twitter), class: "btn btn-primary twitter_sign_in" %>
    <span class="separator">|</span>
    <%= link_to_with_icon ' 新浪微博', 'icon-weibo', user_omniauth_authorize_path(:weibo), class: "btn btn-danger weibo_sign_in" %>
  </div>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name, redirect_from: params[:redirect_from])) do |f| %>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true %>

    <div class="checkbox">
      <label>
        <input class="boolean optional" id="user_remember_me" name="user[remember_me]" type="checkbox" value="1"> 记住我
      </label>
    </div>

    <%= f.button :submit, "登录", class: "btn btn-primary btn-lg btn-block" %>
    <%= link_to '注册', new_user_registration_path, class: 'btn btn-success btn-lg btn-block' %>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
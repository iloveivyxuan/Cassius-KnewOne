<%- page_title '重新发送取消账号冻结邮件' %>

<header class="page-header">
  <h2>重新发送取消账号冻结邮件</h2>
</header>

<main role="main">
  <%= simple_form_for(resource, :as => resource_name, :url => unlock_url(resource_name), :html => { :method => :post }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :email, :required => true %>
    <%= f.button :submit, "发送", class: "btn btn-primary btn-lg btn-block" %>
  <% end %>
</main>

  nav#navigation data-spy="affix" data-offset-top="80" data-offset-bottom="200" role="navigation"
    ul.nav
      li = link_to "社区产品经理", "#product_manager"
      li = link_to "电商负责人", "#salesman"
      li = link_to "数据运营（用户社区方向）", "#data_analyst"
      li = link_to "内容编辑", "#content_strategist"
      li = link_to "美术编辑", "#art_editor"
      li = link_to "UX 设计师", "#designer"
      li = link_to "前端程序员", "#front_end_developer"
      li = link_to "后端 ROR 程序员", "#web_developer"
      li = link_to "iOS 程序员", "#ios_developer"

- content_for :script do
  javascript:
    $(function() {
      var $window = $(window);

      $('body').scrollspy({
        offset: 100,
        target: '#navigation'
      });

      $('#navigation').find('a').on('click', function(event) {
        event.preventDefault();

        var $this = $(this),
            target = $this.attr('href');

        if (target.indexOf('#') == 0) {
          var offset = $('.navbar').height() + 30,
              top = $(target).offset().top;

          $window.scrollTop(top - offset);
        }
      });
    });

- page_title "#{params[:q]}的搜索结果"

header.page-header
  h1
    em.text-success #{params[:q]}
    | &nbsp;的搜索结果

section
  - if @things && @things.length > 0
    ul.things.infinite#things= render @things, size: :normal, img_lazy: true
    = paginate @things
  - else
    p.h3.text-muted.text-center
      | 没有关于&nbsp;
      em.text-danger #{params[:q]}
      | &nbsp;的搜索结果，
      = link_to '我来分享~', new_thing_path

- content_for :script do
  javascript:
    Making.InfiniteScroll("#wrapper > section");

article.feed
  .feed-latest-user
    = present(feed.activities.first.user).link_to_with_avatar(:small)

  = render 'hot_thing', hot_thing: feed.thing

  ul.feed-activities
    = render partial: 'feed_activity', collection: feed.activities_not_from_reviews, as: :activity

  - if feed.reviews.present?
    .feed-reviews
      - feed.reviews.each do |review|
        = render 'feed_review', review: review
        ul.feed-activities
          = render partial: 'feed_activity', collection: feed.activities_from(review), as: :activity

= simple_form_for(current_user, url: email_account_path, wrapper: :horizontal, html: { method: :patch, class: 'form-horizontal' }) do |f|
  = f.input :email, hint: '已经向您的邮箱发送验证邮件', required: true, autofocus: true

  .form-group
    .form-action
      = f.button :submit, '发送验证邮件', class: 'btn btn-primary'
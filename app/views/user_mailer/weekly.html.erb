<% content_for :title do %>
  你好，
  <%= link_to @user.name, user_url(@user, from: :weekly), target: '_blank', style: 'color: #049cdb; text-decoration: none; display: inline-block;', class: 'mobile-button' %>
<% end %>

<% content_for :subtitle do %>
  在过去的一周里（<%= @weekly.since_date.strftime('%Y.%m.%d') %> ~ <%= @weekly.due_date.strftime('%Y.%m.%d') %>）
<% end %>

<%- if (hot_things = @items[:hot_things]) && @items[:hot_things_count] > 0 %>
  <div class="block">
    <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="fulltext">
      <tbody>
      <tr>
        <td>
          <table bgcolor="#f7f7f7" width="580" align="center" cellpadding="0" cellspacing="0" border="0" class="section-title">
            <tbody>
            <tr>
              <td width="100%" height="40"></td>
            </tr>
            <tr>
              <td align="center" style="font-size: 21px; font-family: Helvetica, Arial, sans-serif; color: #777777; font-weight: bold; line-height: 28px" st-title="fulltext-title">
                本周在 KnewOne 上最受欢迎的产品
              </td>
            </tr>
            <tr>
              <td width="100%" height="40"></td>
            </tr>
            </tbody>
          </table>
        </td>
      </tr>
      </tbody>
    </table>
  </div>

  <%- hot_things.each_slice(2) do |things| %>
    <div class="block">
      <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="2columns">
        <tbody>
        <tr>
          <td>
            <table bgcolor="#ffffff" width="580" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth" modulebg="edit">
              <tbody>
              <tr>
                <td width="100%" height="50"></td>
              </tr>
              <tr>
                <td>
                  <table width="540" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                    <tbody>
                    <tr>
                      <td>
                        <%- things.each_with_index do |t, i| %>
                          <table width="260" align="left" border="0" cellpadding="0" cellspacing="0" class="devicewidth">
                            <tbody>
                            <tr>
                              <td width="260" height="195" align="center" class="devicewidth">
                                <%= link_to thing_url(t, from: :weekly), target: '_blank' do %>
                                  <%= image_tag t.cover.url('thing.fixed.small'), alt: '', border: '0', width: '260', height: '195', style: 'display:block; border:none; outline:none; text-decoration:none;', class: 'col2img' %>
                                <% end %>
                              </td>
                            </tr>
                            <tr>
                              <td width="100%" height="15" style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">&nbsp;</td>
                            </tr>
                            <tr>
                              <td>
                                <table width="260" align="center" border="0" cellpadding="0" cellspacing="0" class="devicewidthinner">
                                  <tbody>
                                  <tr>
                                    <td align="center" style="padding: 0 0 5px 0; font-family: Helvetica, arial, sans-serif; font-size: 16px; color: #333333; line-height: 22px;" st-title="2col-title1">
                                      <%= link_to t.title, thing_url(t, from: :weekly), target: '_blank', style: 'font-size: 16px; font-family: Helvetica, Arial, sans-serif; font-weight: normal; color: #049cdb; text-decoration: none; display: inline-block;' %>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td align="center" style="padding: 5px 0 5px 0; font-size: 13px; font-family: Helvetica, Arial, sans-serif; font-weight: normal; color: #aaaaaa;" st-title="2col-title1">
                                      <%= t.fanciers_count %> 喜欢 <%= t.feelings_count %> 短评
                                    </td>
                                  </tr>
                                  </tbody>
                                </table>
                              </td>
                            </tr>
                            </tbody>
                          </table>

                          <% if i < (@items[:hot_things_count] - 1) %>
                            <!-- spacing for mobile devices-->
                            <table align="left" border="0" cellpadding="0" cellspacing="0" class="mobilespacing">
                              <tbody>
                              <tr>
                                <td width="100%" height="30" style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">&nbsp;</td>
                              </tr>
                              </tbody>
                            </table>
                            <!-- end of for mobile devices-->
                          <% end %>
                        <% end -%>
                      </td>
                    </tr>
                    </tbody>
                  </table>
                </td>
              </tr>
              </tbody>
            </table>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  <% end -%>

  <div class="block">
    <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="fulltext">
      <tbody>
      <tr>
        <td>
          <table bgcolor="#ffffff" width="580" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth" modulebg="edit">
            <tbody>
            <tr>
              <td width="100%" height="50"></td>
            </tr>
            <tr>
              <td>
                <table width="540" align="center" cellpadding="0" cellspacing="0" border="0" class="devicewidthinner">
                  <tbody>
                  <tr>
                    <td>
                      <table height="36" align="center" valign="middle" border="0" cellpadding="0" cellspacing="0" class="tablet-button" st-button="edit">
                        <tbody>
                        <tr>
                          <td width="auto" align="center" valign="middle" height="36" style=" background-color:#049cdb; background-clip: padding-box;font-size:13px; font-family:Helvetica, arial, sans-serif; text-align:center;  color:#ffffff; font-weight: 300; padding-left:25px; padding-right:25px;">
                             <span style="color: #ffffff; font-weight: 300;">
                               <%= link_to '查看更多受欢迎的产品 →', hits_url(from: :weekly), target: '_blank', style: 'color: #ffffff; text-align:center;text-decoration: none;' %>
                             </span>
                          </td>
                        </tr>
                        </tbody>
                      </table>
                    </td>
                  </tr>
                  <tr>
                    <td width="100%" height="50"></td>
                  </tr>
                  </tbody>
                </table>
              </td>
            </tr>
            </tbody>
          </table>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
<% end %>

<%- if (friends_things = @items[:friends_things]) && @items[:friends_things_count] > 0 %>
  <div class="block">
    <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="fulltext">
      <tbody>
      <tr>
        <td>
          <table bgcolor="#f7f7f7" width="580" align="center" cellpadding="0" cellspacing="0" border="0" class="section-title">
            <tbody>
            <tr>
              <td width="100%" height="40"></td>
            </tr>
            <tr>
              <td align="center" style="font-size: 21px; font-family: Helvetica, Arial, sans-serif; color: #777777; font-weight: bold; line-height: 28px" st-title="fulltext-title">
                你关注的人感兴趣的产品
              </td>
            </tr>
            <tr>
              <td width="100%" height="40"></td>
            </tr>
            </tbody>
          </table>
        </td>
      </tr>
      </tbody>
    </table>
  </div>

  <div class="block">
    <!-- 3-columns -->
    <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="3columns">
      <tbody>
      <tr>
        <td>
          <table bgcolor="#ffffff" width="580" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth" modulebg="edit">
            <tbody>
            <tr>
              <td width="100%" height="50"></td>
            </tr>
            <tr>
              <td>
                <table width="540" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                  <tbody>
                  <%- friends_things.each_slice(3) do |things| %>
                    <tr>
                      <td>
                        <%- things.each_with_index do |t, i| %>
                          <table width="170" align="left" border="0" cellpadding="0" cellspacing="0" class="devicewidth">
                            <tbody>
                            <tr>
                              <td width="170" height="128" align="center" class="devicewidth">
                                <%= link_to thing_url(t, from: :weekly), target: '_blank' do %>
                                  <%= image_tag t.cover.url('thing.fixed.small'), alt: '', border: '0', width: '170', height: '128', style: 'display:block; border:none; outline:none; text-decoration:none;', class: 'col3img' %>
                                <% end -%>
                              </td>
                            </tr>
                            <tr>
                              <td>
                                <table width="170" align="center" border="0" cellpadding="0" cellspacing="0" class="devicewidthinner">
                                  <tbody>
                                  <tr>
                                    <td width="100%" height="15" style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                  </tr>
                                  <tr>
                                    <td align="center" style="padding: 0 0 5px 0; font-family: Helvetica, arial, sans-serif; font-size: 14px; color: #333333; line-height: 20px;" st-title="2col-title1">
                                      <%= link_to t.title, thing_url(t, from: :weekly), target: '_blank', style: 'font-size: 14px; font-family: Helvetica, Arial, sans-serif; font-weight: normal; color: #049cdb; text-decoration: none; display: inline-block;' %>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td align="center" style="padding: 5px 0 5px 0; font-size: 13px; font-family: Helvetica, Arial, sans-serif; font-weight: normal; color: #aaaaaa;" st-title="2col-title1">
                                      <%= t.fanciers_count %> 喜欢 <%= t.feelings_count %> 短评
                                    </td>
                                  </tr>
                                  </tbody>
                                </table>
                              </td>
                            </tr>
                            </tbody>
                          </table>

                          <%- if i < 3 %>
                            <table width="15" align="left" border="0" cellpadding="0" cellspacing="0" class="removeMobile">
                              <tbody>
                              <tr>
                                <td width="100%" height="15" style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">&nbsp;</td>
                              </tr>
                              </tbody>
                            </table>
                          <% end %>
                        <% end -%>
                      </td>
                    </tr>
                  <% end -%>
                  </tbody>
                </table>
              </td>
            </tr>
            <tr>
              <td width="100%" height="40"></td>
            </tr>
            </tbody>
          </table>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
<% end %>

<%= render @weekly.weekly_entries %>

<div class="block">
  <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="fulltext">
    <tbody>
    <tr>
      <td>
        <table bgcolor="#f7f7f7" width="580" align="center" cellpadding="0" cellspacing="0" border="0" class="section-title">
          <tbody>
          <tr>
            <td width="100%" height="40"></td>
          </tr>
          <tr>
            <td align="center" style="font-size: 21px; font-family: Helvetica, Arial, sans-serif; color: #777777; font-weight: bold; line-height: 28px" st-title="fulltext-title">
              <%= weekly_entry.subject %>
            </td>
          </tr>
          <tr>
            <td width="100%" height="40"></td>
          </tr>
          </tbody>
        </table>
      </td>
    </tr>
    </tbody>
  </table>
</div>

<div class="block">
  <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="leftimage">
    <tbody>
    <tr>
      <td>
        <table bgcolor="#ffffff" width="580" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth" modulebg="edit">
          <tbody>
          <tr>
            <td height="50"></td>
          </tr>
          <tr>
            <td>
              <table width="540" align="center" border="0" cellpadding="0" cellspacing="0" class="devicewidthinner">
                <tbody>
                <tr>
                  <td>
                    <table width="240" align="left" border="0" cellpadding="0" cellspacing="0" class="devicewidthinner">
                      <tbody>
                      <tr>
                        <td width="240" height="180" align="center">
                          <%= image_tag weekly_entry.image.url(:small), alt: '', border: '0', width: '240', height: '180', style: 'display:block; border:none; outline:none; text-decoration:none; width: 240px; height: 180px;', class: 'col2img' %>
                        </td>
                      </tr>
                      </tbody>
                    </table>
                    <!-- mobile spacing -->
                    <table align="left" border="0" cellpadding="0" cellspacing="0" class="mobilespacing">
                      <tbody>
                      <tr>
                        <td width="100%" height="30" style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">&nbsp;</td>
                      </tr>
                      </tbody>
                    </table>
                    <!-- mobile spacing -->
                    <table width="270" align="right" border="0" cellpadding="0" cellspacing="0" class="devicewidthinner">
                      <tbody>
                      <tr>
                        <td style="padding: 0 0 5px 0; font-family: Helvetica, arial, sans-serif; font-size: 18px; color: #777777; line-height: 22px; font-weight: bold;" st-title="leftimage-title">
                          <%- if weekly_entry.link.present? %>
                            <a href="<%= weekly_entry.link.html_safe %>" target="_blank" style="font-size: 18px; font-family: Helvetica, Arial, sans-serif; font-weight: normal; color: #049cdb; text-decoration: none; display: inline-block;">
                              <%= weekly_entry.title %>
                            </a>
                          <% else %>
                            <%= weekly_entry.title %>
                          <% end %>

                        </td>
                      </tr>
                      <tr>
                        <td style="padding: 10px 0 0 0; font-size: 14px; line-height: 22px; font-family: Helvetica, Arial, sans-serif; color: #666666;" st-content="leftimage-paragraph">
                          <%= weekly_entry.content %>
                        </td>
                      </tr>
                      </tbody>
                    </table>
                  </td>
                </tr>
                </tbody>
              </table>
            </td>
          </tr>
          <tr>
            <td height="50"></td>
          </tr>
          </tbody>
        </table>
      </td>
    </tr>
    </tbody>
  </table>
</div>

= form_tag params, method: :get, class: 'form-inline' do
  .form-group
    = select_tag :find_by, options_for_select(types.to_a.collect(&:reverse), params[:find_by]), include_blank: false, class: 'form-control'
  .form-group
    = text_field_tag :find_cond, params[:find_cond], class: 'form-control'
  .form-group
    = text_field_tag :start_date, params[:start_date], class: 'form-control datepicker', placeholder: '起始日期', size: '15'
  .form-group
    = text_field_tag :end_date, params[:end_date], class: 'form-control datepicker', placeholder: '截止日期', size: '15'
  = submit_tag '搜索', class: 'btn btn-default'
  = link_to '清空条件', haven_orders_path, class: 'btn btn-default'

- content_for :script do
  javascript:
    $('.datepicker').datepicker({format: 'yyyy-mm-dd'});

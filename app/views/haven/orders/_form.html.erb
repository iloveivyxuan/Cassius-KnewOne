<%= form_for order, url: ship_haven_order_path(order), html: {class: 'form-inline'} do |f| %>
  <%= f.text_field :deliver_no, class: 'input-sm', placeholder: '运单号' %>
  <%= f.text_field :admin_note, class: 'input-sm', placeholder: '备注' %>
  <%= f.submit '发货', class: 'btn btn-warning', data: {confirm: '确定发货？'} %>
<% end %>
